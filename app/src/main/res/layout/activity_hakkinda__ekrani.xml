        android:layout_height="wrap_content"
        android:text="İletişim Bilgileri"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:id="@+id/iletisim_ziya"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_mail"
            android:layout_height="60dp" />
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Posta(Zahit Ziya GÜREL)\nziyagurel55@hotmail.com"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/iletisim_ali"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_mail"
            android:layout_height="60dp" />
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Posta(Ali Osman OKTAR)\naliosmanoktar@gmail.com"
            android:textSize="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:gravity="bottom|center_horizontal"
        android:text=" © 2019\n Her Hakkı Saklıdır"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>